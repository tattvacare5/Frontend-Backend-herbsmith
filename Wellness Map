        // Function to generate the feature card HTML with a 2-column grid for better text display
        function generateFeatureCards(cards) {
            return `
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    ${cards.map(card => `
                        <div class="bg-gray-50 rounded-xl shadow-lg border border-gray-100 p-4 flex flex-col items-center text-center transition duration-300 hover:shadow-xl">
                            <img src="${card.imgSrc}" alt="${card.cardTitle}" class="w-full h-auto rounded-lg mb-4 object-cover aspect-video">
                            <div class="p-2 w-full">
                                <h3 class="text-lg font-semibold text-gray-900 mt-2">${card.cardTitle}</h3>
                                <p class="text-sm text-gray-600 mt-1">${card.cardText}</p>
                                <a href="${card.link}" class="mt-4 inline-block text-brand-green font-medium hover:underline transition duration-300">
                                    ${card.linkText} &rarr;
                                </a>
                            </div>
                        </div>
                    `).join('')}
                </div>
            `;
        }

        // Function to update the content area
        function updateContent(area) {
            const data = areaContent[area];
            
            // 1. Remove the old content's fade-in class
            contentDisplay.classList.remove('fade-in');
            
            // 2. Wait for a tiny moment before adding the class back to ensure re-trigger
            setTimeout(() => {
                
                // Update Title
                contentTitle.innerHTML = data.title;
                
                // Update Cards
                contentCards.innerHTML = generateFeatureCards(data.cards);
                
                // The contentCta update logic is entirely removed, as requested
                // No contentCta.innerHTML update is performed here.

                // Add fade-in class
                contentDisplay.classList.add('fade-in');
            }, 50);
        }

        // Add click event listeners to all hotspots
        hotspots.forEach(hotspot => {
            hotspot.addEventListener('click', () => {
                const area = hotspot.getAttribute('data-area');
                
                // Remove 'active' class from all hotspots
                hotspots.forEach(h => h.classList.remove('active'));
                
                // Add 'active' class to the clicked hotspot
                hotspot.classList.add('active');
                
                // Update the content display
                updateContent(area);
            });
        });
        
        // Initial state: Click on 'hair' on load
        document.addEventListener('DOMContentLoaded', () => {
            document.getElementById('hotspot-hair').click();
        });
    </script>
