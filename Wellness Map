      function generateFeatureCards(cards) {
        return `
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            ${cards
              .map(
                (card) => `
              <div class="bg-gray-50 p-4 rounded-xl shadow-lg text-center">
                <img src="${card.imgSrc}" class="rounded-lg mb-4 w-full h-40 object-cover" />
                <h3 class="text-lg font-semibold">${card.cardTitle}</h3>
                <p class="text-sm text-gray-600 mt-1">${card.cardText}</p>
                <a href="${card.link}" class="mt-4 inline-block text-brand-green font-medium hover:underline">${card.linkText} ‚Üí</a>
              </div>
            `
              )
              .join("")}
          </div>`;
      }

      function updateContent(area) {
        const data = areaContent[area];
        contentDisplay.classList.remove("fade-in");

        setTimeout(() => {
          contentTitle.innerHTML = data.title;
          contentCards.innerHTML = generateFeatureCards(data.cards);
          contentDisplay.classList.add("fade-in");
        }, 50);
      }

      hotspots.forEach((hotspot) => {
        hotspot.addEventListener("click", () => {
          hotspots.forEach((h) => h.classList.remove("active"));
          hotspot.classList.add("active");

          const area = hotspot.getAttribute("data-area");
          updateContent(area);
        });
      });
    </script>
